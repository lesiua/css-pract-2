<header class='header'>
    {{> logo}}
    <nav class='header_nav'>
        <div class="header_nav_right">
            {{> nav list=header}}
        </div>
    </nav>
</header>

<main class="main">
    {{#with info}}
    <div class="info">
        <h1 class="info_title">{{title}}</h1>
        <p class="info_description">{{description}}</p>
    </div>
    {{/with}}
    
    {{#with form}}
    <form class="form">
        <h2 class="form_title">{{title}}</h2>
        <div class="form_input_list">
            {{#each inputs}}
            <input class="form_input" type="{{type}}" placeholder="{{placeholder}}" name="{{name}}" id="form-input-{{id}}">
            {{/each}}
        </div>
        <div class="form_checkbox">
            <input type="checkbox" name="{{checkbox.name}}" id="{{checkbox.name}}">
            <div></div>
            <label for="{{checkbox.name}}">{{checkbox.label}}</label>
        </div>
        <button class="form_button" type="submit">{{button}}</button>
        <div></div>
        <p class="form_info">{{info}}</p>
    </form>
    {{/with}}
</main>

{{#with updates}}
<div class="updates_list">
    <h3 class="updates_title">{{title}}</h3>
    {{#each list}}
        <div class="updates_list_item">
            <img src="https://picsum.photos/32/32" class="updates_img"></img>
            <div class="updates_nickname">
                <strong>{{nickname}}</strong>
                <p>{{description}}</p>
            </div>
        </div>
    {{/each}}
    <a href="{{show_all.url}}">{{show_all.text}}</a>
</div>
{{/with}}

{{#with expirience}}
<div class="expirience">
    <h2 class="expirience_title">{{title}}</h2>
    <div class="expirience_badge">{{badge}}</div>
    <div class="expirience_list">
        {{#each list}}
            <div class="exp_list_item">
                <strong>{{name}}</strong>
                <p>{{details}}</p>
            </div>
        {{/each}}
    </div>
</div>
{{/with}}

<footer class="footer">
    <div>
        {{> logo}}
        <span class="footer_copyright">Copyright 2023</span>
    </div>
    {{#each footer}}
    <div>
        <span class="footer_title">{{title}}</span>
        {{> nav list=links isVertical=true}}
    </div>
    {{/each}}
</footer>